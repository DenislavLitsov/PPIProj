@model ASP.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="panel panel-default">
    <div class="panel-head">
        <div class="panel-title">
            <span class="panel-title-text">Convert currency</span>
        </div>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <div class="row d-flex">
                <div class="col-sm-12 mb-sm-5">
                    <div class="row d-flex">
                        <div class="col-6">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="mainCurrency">From</label>
                                </div>
                                <select class="custom-select" id="mainCurrency">
                                    @foreach (var item in Model.PrimaryCurrencies)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="secondaryCurrency">To</label>
                                </div>
                                <select class="custom-select" id="secondaryCurrency">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row d-flex">
                        <div class="col-6">
                            <div class="form-group">
                                <label>
                                    Amount
                                </label>
                                <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" value="0.00" id="inputAmount">
                            </div>
                        </div>
                        <div class="col-6">
                            <label>
                                Converted amount
                            </label>
                            <div class="form-group">
                                <input type="number" id="convertedAmount" class="form-control" disabled placeholder="Disabled" value="0.00">
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-start">
                        <div class="mr-3">
                            <button class="btn btn-primary w-100" type="button">
                                Convert
                            </button>
                        </div>
                        <div class="">
                            <button class="btn btn-primary w-100" type="button" id="SwitchButton">
                                Switch
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 mb-5">
                    <div class="row d-flex justify-content-end">
                        <select class="custom-select w-25" id="candleOptions">
                            <option value="1">Per minute</option>
                            <option value="2">Per hour</option>
                            <option value="3" selected="selected">Per day</option>
                            <option value="4">Per week</option>
                        </select>
                    </div>
                    <div>
                        <div id="chartContainer" style="height: 370px; width: 100%;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="module" src="~/js/CurrencyManager.js" asp-append-version="true"></script>
    <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
    <script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>
}
